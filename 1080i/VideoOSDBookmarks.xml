<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">2</defaultcontrol>
    <coordinates>
        <left>210</left>
        <top>150</top>
        <system>1</system>
    </coordinates>
    <include>Animation_DialogPopupOpenClose</include>
    <controls>
        <include name="DialogBackgroundCommons">
            <param name="DialogBackgroundWidth" value="1500" />
            <param name="DialogBackgroundHeight" value="800" />
            <param name="DialogHeaderLabel" value="$LOCALIZE[298]" />
            <param name="DialogHeaderId" value="" />
        </include>
        <control type="panel" id="11">
            <left>40</left>
            <top>80</top>
            <width>1110</width>
            <height>700</height>
            <onleft>11</onleft>
            <onright>11</onright>
            <preloaditems>2</preloaditems>
            <pagecontrol>61</pagecontrol>
            <scrolltime tween="sine">200</scrolltime>
            <orientation>vertical</orientation>
            <itemlayout width="370" height="350">
                <control type="group">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>330</width>
                        <height>250</height>
                        <aspectratio>scale</aspectratio>
                        <texture border="4" fallback="DefaultAddon.png">$INFO[ListItem.Art(thumb)]</texture>
                        <bordertexture colordiffuse="border_alpha">colors/black.png</bordertexture>
                        <bordersize>4</bordersize>
                    </control>
                    <control type="label">
                        <left>20</left>
                        <top>250</top>
                        <width>260</width>
                        <height>40</height>
                        <label>$INFO[ListItem.Label]</label>
                        <font>font13</font>
                        <textcolor>white</textcolor>
                        <shadowcolor>text_shadow</shadowcolor>
                        <scroll>false</scroll>
                        <align>center</align>
                    </control>
                </control>
            </itemlayout>
            <focusedlayout width="370" height="350">
                <control type="group">
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>330</width>
                        <height>250</height>
                        <aspectratio>scale</aspectratio>
                        <texture border="4" fallback="DefaultAddon.png">$INFO[ListItem.Art(thumb)]</texture>
                        <bordertexture colordiffuse="border_alpha">colors/black.png</bordertexture>
                        <bordersize>4</bordersize>
                    </control>
                    <control type="image">
                        <left>0</left>
                        <top>0</top>
                        <width>330</width>
                        <height>250</height>
                        <aspectratio>stretch</aspectratio>
                        <texture background="true" border="8">buttons/thumbnail_focused.png</texture>
                    </control>
                    <control type="label">
                        <left>20</left>
                        <top>250</top>
                        <width>260</width>
                        <height>40</height>
                        <label>$INFO[ListItem.Label]</label>
                        <font>font13</font>
                        <textcolor>white</textcolor>
                        <shadowcolor>text_shadow</shadowcolor>
                        <scroll>false</scroll>
                        <align>center</align>
                    </control>
                </control>
            </focusedlayout>
        </control>
        <control type="grouplist" id="9001">
            <orientation>vertical</orientation>
            <left>1150</left>
            <top>70</top>
            <width>1500</width>
            <height>800</height>
            <aligny>top</aligny>
            <itemgap>20</itemgap>
            <onleft>11</onleft>
            <onright>11</onright>
            <include name="DefaultDialogButton">
                <param name="id" value="2" />
                <param name="label" value="294" />
            </include>
            <include name="DefaultDialogButton">
                <param name="id" value="3" />
                <param name="label" value="296" />
            </include>
            <include name="DefaultDialogButton">
                <param name="id" value="4" />
                <param name="label" value="20406" />
            </include>
        </control>
        <control type="scrollbar" id="61">
            <left>1860</left>
            <top>132</top>
            <width>46</width>
            <height>802</height>
            <texturesliderbackground colordiffuse="$VAR[AreaColorVar]">views/scrollbarbacklist.png</texturesliderbackground>
            <onleft>450</onleft>
            <onright>450</onright>
            <ondown>61</ondown>
            <onup>61</onup>
        </control>
    </controls>
</window>
