<?xml version="1.0" encoding="utf-8"?>
<window>
    <defaultcontrol always="true">3000</defaultcontrol>
    <include>Animation_DialogPopupOpenClose</include>
    <controls>
        <control type="group">
            <left>260</left>
            <top>150</top>
            <include name="DialogBackgroundCommons">
                <param name="DialogBackgroundWidth" value="1400" />
                <param name="DialogBackgroundHeight" value="770" />
                <param name="DialogHeaderLabel" value="$LOCALIZE[13406]" />
                <param name="DialogHeaderId" value="1" />
            </include>
            <control type="textbox" id="5">
                <posx>40</posx>
                <posy>80</posy>
                <width>1360</width>
                <height>675</height>
                <font>font13</font>
                <shadowcolor>black</shadowcolor>
                <pagecontrol>3000</pagecontrol>
            </control>
            <control type="scrollbar" id="3000">
                <include>InvisibleObject</include>
                <ondown>3000</ondown>
                <onup>3000</onup>
            </control>
        </control>
        <control type="image">
            <left>936</left>
            <top>113</top>
            <width>48</width>
            <height>20</height>
            <texture colordiffuse="button_focus" flipy="true">overlays/arrowdown.png</texture>
            <visible>Control.IsVisible(3000) + IntegerGreaterThan(Container(5).CurrentPage,1)</visible>
            <animation delay="80" effect="fade" end="100" start="0" time="120">VisibleChange</animation>
        </control>
        <control type="image">
            <left>936</left>
            <top>940</top>
            <width>48</width>
            <height>20</height>
            <texture colordiffuse="button_focus">overlays/arrowdown.png</texture>
            <visible>Control.IsVisible(3000) + !StringCompare(Container(5).CurrentPage,Container(5).NumPages)</visible>
            <animation delay="80" effect="fade" end="100" start="0" time="120">VisibleChange</animation>
        </control>
    </controls>
</window>
