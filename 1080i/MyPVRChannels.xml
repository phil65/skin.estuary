                    <control type="label">
                        <left>70</left>
                        <top>0</top>
                        <height>70</height>
                        <width>560</width>
                        <align>left</align>
                        <aligny>center</aligny>
                        <font>font13</font>
                        <label>$INFO[ListItem.Label]</label>
