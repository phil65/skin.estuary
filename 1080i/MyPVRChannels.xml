                        <textcolor>white</textcolor>
                        <shadowcolor>text_shadow</shadowcolor>
                    </control>
                    <control type="label">
                        <left>90</left>
                        <top>0</top>
                        <height>70</height>
                        <width>555</width>
                        <align>right</align>
                        <aligny>center</aligny>
                        <font>font12</font>
                        <label>$INFO[ListItem.Label2]</label>
                        <selectedcolor>selected</selectedcolor>
                        <textcolor>grey</textcolor>
                        <shadowcolor>text_shadow</shadowcolor>
                    </control>
